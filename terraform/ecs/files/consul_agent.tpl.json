[
  {
    "name": "consul",
    "image": "consul",
    "essential": true,
    "memory": 500,
    "environment" : [
        { "name" : "CONSUL_ALLOW_PRIVILEGED_PORTS", "value" : "" }
    ],
    "command" : [ 
        "consul",
        "agent",
        "-dns-port=53",
        "-recursor=${TF_DNS_SERVER}",
        "-bind=${TF_BRIDGE_IP}",
        "-client=${TF_BRIDGE_IP}",
        "-data-dir=/consul/data",
        "-retry-join=${TF_CONSUL_JOIN}"
    ]
  }
]
